<build>
  <plugins>
    <plugin>
      <artifactId>maven-compiler-plugin</artifactId>
      <version>3.8.1</version> <!-- Updated version -->
      <configuration>
        <source>11</source> <!-- Set to the Java version you're using -->
        <target>11</target>
      </configuration>
    </plugin>

    <plugin>
      <artifactId>maven-release-plugin</artifactId>
      <configuration>
        <autoVersionSubmodules>true</autoVersionSubmodules>
      </configuration>
    </plugin>

    <plugin>
      <artifactId>maven-site-plugin</artifactId>
      <configuration>
        <reportPlugins>
          <!-- Other plugins remain unchanged -->
        </reportPlugins>
      </configuration>
    </plugin>
  </plugins>

  <pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version> <!-- Updated version -->
      </plugin>

      <!-- Other plugin versions remain unchanged -->
    </plugins>
  </pluginManagement>
</build>
